<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorderGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorderGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/textBarrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="end"
        app:constraint_referenced_tags="rating" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/detailGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_tags="movie_name, rating, ratingDescription, country, countryDescription, genre, genreDescription, director,directorDescription, scenarist, scenaristDescription, roles, rolesDescription, movieDescription" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/leftBorderGuideline"
        app:layout_constraintTag="movie_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="The Lord of the Rings: The Fellowship of the Ring" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рейтин IMDB:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/country"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/leftBorderGuideline"
        app:layout_constraintTag="rating"
        app:layout_constraintTop_toBottomOf="@+id/movie_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ratingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/rating"
        app:layout_constraintEnd_toEndOf="@id/rightBorderGuideline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/textBarrier"
        app:layout_constraintTag="ratingDescription"
        tools:text="8.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Страна:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/genre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/leftBorderGuideline"
        app:layout_constraintTag="country"
        app:layout_constraintTop_toBottomOf="@+id/rating" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/countryDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/country"
        app:layout_constraintEnd_toEndOf="@id/rightBorderGuideline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/textBarrier"
        app:layout_constraintTag="countryDescription"
        tools:text="USA" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Жанр:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/director"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/leftBorderGuideline"
        app:layout_constraintTag="genre"
        app:layout_constraintTop_toBottomOf="@+id/country" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/genreDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/genre"
        app:layout_constraintEnd_toEndOf="@id/rightBorderGuideline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/textBarrier"
        app:layout_constraintTag="genreDescription"
        tools:text="Horror" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Режисер:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/scenarist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/leftBorderGuideline"
        app:layout_constraintTag="director"
        app:layout_constraintTop_toBottomOf="@+id/genre" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/directorDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/director"
        app:layout_constraintEnd_toEndOf="@id/rightBorderGuideline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/textBarrier"
        app:layout_constraintTag="directorDescription"
        tools:text="Peter Jackson" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/scenaristBarrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_tags="scenaristDescription, scenarist" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/scenarist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сценарист:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/roles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/leftBorderGuideline"
        app:layout_constraintTag="scenarist"
        app:layout_constraintTop_toBottomOf="@+id/director" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/scenaristDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/scenarist"
        app:layout_constraintEnd_toEndOf="@id/rightBorderGuideline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/textBarrier"
        app:layout_constraintTag="scenaristDescription"
        tools:text="Fran Walsh,Philippa Boyens, Peter Jackson, Stephen Sinclair" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/rolesBarrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_tags="rolesDescription, roles" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/roles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В ролях:"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/leftBorderGuideline"
        app:layout_constraintTag="roles"
        app:layout_constraintTop_toBottomOf="@+id/scenaristBarrier" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rolesDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/roles"
        app:layout_constraintEnd_toEndOf="@id/rightBorderGuideline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/textBarrier"
        app:layout_constraintTag="rolesDescription"
        tools:text="Elijah Wood, Ian McKellen, Liv Tyler, Viggo Mortensen, Sean Astin, Cate Blanchett, John Rhys-Davies, Christopher Lee, Billy Boyd, Dominic Monaghan, Orlando Bloom, Hugo Weaving, Andy Serkis, Sean Bean" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/movieDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rightBorderGuideline"
        app:layout_constraintStart_toStartOf="@id/leftBorderGuideline"
        app:layout_constraintTag="movieDescription"
        app:layout_constraintTop_toBottomOf="@id/rolesBarrier"
        app:layout_constraintVertical_bias="0"
        tools:text="An ancient Ring thought lost for centuries has been found, and through a strange twist of fate has been given to a small Hobbit named Frodo. When Gandalf discovers the Ring is in fact the One Ring of the Dark Lord Sauron, Frodo must make an epic quest to the Cracks of Doom in order to destroy it. However, he does not go alone. He is joined by Gandalf, Legolas the elf, Gimli the Dwarf, Aragorn, Boromir, and his three Hobbit friends Merry, Pippin, and Samwise. Through mountains, snow, darkness, forests, rivers and plains, facing evil and danger at every corner the Fellowship of the Ring must go. Their quest to destroy the One Ring is the only hope for the end of the Dark Lords reign." />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/errorMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Something went wrong"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/castButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show cast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>